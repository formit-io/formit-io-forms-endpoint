{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns":true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "es7"
    ],
    "baseUrl": ".",
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ]
}